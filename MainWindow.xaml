<Window x:Class="lord13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lord13"
        mc:Ignorable="d"
        Title="Реперская" Height="1080" Width="1920">
    <Grid MouseUp="Draw_up">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray">
            <TextBlock Text="Инструменты" Margin="5"/>
            <Button x:Name="BrushB" Content="Кисть" Margin="5" Background="{Binding BrushColor}" Click="Brush"/>
            <Button x:Name="EraserB" Content="Ластик" Margin="5" Background="{Binding BrushColor}" Click="Eraser"/>
            <!--Background="{Binding BrushColor}"-->
            <Button x:Name="Reset" Content="Очистить" Margin="5" Click="Clear"/>

            <TextBlock Text="Ширина" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="Thick"
                    Width = "60"
                    Margin="5"
                    Text=""/>
                <Button x:Name="ThickEnter" 
                    Content="Изменить" 
                    Margin="5" 
                    Click="NewThick"/>
            </StackPanel>

            <TextBlock Text="Фигуры" Margin="5, 10, 5, 5"/>
            <UniformGrid Rows="1" Columns="3" Height="60">
                <Button Content="/" FontSize="22" Margin="5" Click="Line"/>
                <Button Content="⬭" FontSize="30" Margin="5" Click="Ellipse"/>
                <Button Content="▭" FontSize="28" Margin="5" Click="Rect"/>
            </UniformGrid>

            <TextBlock Text="Цвета" Margin="5, 10, 5, 5"/>
            <UniformGrid Rows="2" Columns="2">
                <UniformGrid.Resources>
                    <Style TargetType="Button">
                        <EventSetter Event="Click" Handler="ChangeColor"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </UniformGrid.Resources>
                <Button Background="Black" Margin="5"/>
                <Button Background="Red" Margin="5"/>
                <Button Background="#324032" Margin="5"/>
                <Button Background="Pink" Margin="5"/>
            </UniformGrid>

            <StackPanel Orientation="Horizontal" Margin="5,600,10,5">
                <TextBox x:Name="FileName"
                    Width = "60"
                    Margin="5"
                    Text=""/>
                <Button x:Name="SaveName" 
                    Background="LightGreen"
                    Content="Save" 
                    Margin="5" 
                    Click="SavePic"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Background="White">
            <Canvas x:Name="Canvass" 
                ClipToBounds="True"
                Background="White"
                MouseDown="Draw_down"
                MouseMove="Draw_move"/>
        </Grid>
    </Grid>
</Window>
