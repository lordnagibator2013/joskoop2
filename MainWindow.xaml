<Window x:Class="lord13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lord13"
        mc:Ignorable="d"
        Title="Реперская" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray">
            <TextBlock Text="Инструменты" Margin="5"/>
            <Button x:Name="BrushB" Content="Кисть" Margin="5" Background="{Binding BrushColor}" Click="Brush"/>
            <Button x:Name="EraserB" Content="Ластик" Margin="5" Background="{Binding BrushColor}" Click="Eraser"/>
            <Button x:Name="Reset" Content="Очистить" Margin="5" Click="Clear"/>
            <TextBlock Text="Цвета" Margin="5, 10, 5, 5"/>
        </StackPanel>

        <Grid Grid.Column="1" Background="White">
            <Image x:Name="DrawingSurface" 
                MouseDown="Draw_down"
                MouseMove="Draw_move"
                MouseUp="Draw_up"/>
        </Grid>
    </Grid>
</Window>
